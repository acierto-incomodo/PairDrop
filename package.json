{
  "name": "pairdrop",
  "version": "1.0.4",
  "description": "PairDrop | Transfer Files Cross-Platform. No Setup, No Signup.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:linux:deb": "electron-builder --linux deb",
    "build:linux:snap": "electron-builder --linux snap",
    "build:linux:appimage": "electron-builder --linux AppImage",
    "build:linux:flatpak": "electron-builder --linux flatpak"
  },
  "keywords": [
    "pairdrop",
    "file-transfer",
    "p2p",
    "electron",
    "share"
  ],
  "author": "StormGamesStudios",
  "homepage": "https://github.com/acierto-incomodo/PairDrop",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.stormgamesstudios.pairdrop",
    "productName": "PairDrop APP",
    "publish": [
      {
        "provider": "github",
        "owner": "acierto-incomodo",
        "repo": "PairDrop"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "icons/icon.png",
        "to": "icons/icon.png",
        "filter": "**/*"
      },
      {
        "from": "icons/icon.png",
        "to": "icon.png",
        "filter": "**/*"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "updater.html",
      "icons/icon.png",
      "assets/**/*"
    ],
    "linux": {
      "target": [
        "deb",
        "snap",
        "AppImage",
        "flatpak"
      ],
      "category": "Utility",
      "icon": "icons",
      "maintainer": "StormGamesStudios <meliodas.aitor@gmail.com>",
      "vendor": "StormGamesStudios",
      "synopsis": "Cliente no oficial de PairDrop APP",
      "description": "Aplicación ligera basada en Electron que abre PairDrop APP y guarda tus datos de sesión localmente.",
      "desktop": {
        "entry": {
          "Name": "PairDrop",
          "Comment": "Transfer Files Cross-Platform",
          "Keywords": "file;transfer;network;p2p;",
          "Categories": "Network;Utility;"
        }
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icons/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "include": "installer.nsh",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "snap": {
      "grade": "stable",
      "confinement": "strict",
      "plugs": [
        "network",
        "network-bind",
        "desktop",
        "desktop-legacy",
        "wayland",
        "x11",
        "browser-support"
      ]
    },
    "appImage": {
      "artifactName": "PairDrop-${version}-${arch}.${ext}"
    },
    "flatpak": {
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "23.08",
      "sdk": "org.freedesktop.Sdk",
      "base": "org.electronjs.Electron2.BaseApp",
      "baseVersion": "23.08",
      "finishArgs": [
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home"
      ]
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0"
  }
}
